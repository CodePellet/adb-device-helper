{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "es6": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": [
            "error",
            { "devDependencies": false, "optionalDependencies": false, "peerDependencies": false, "packageDir": "./" }
        ]
    }
}
