{
    "name": "adb-device-helper",
    "version": "2022.37.3",
    "description": "Helper for selected adb tasks",
    "main": "dist/main/main.js",
    "scripts": {
        "start": "npm run build:dev && electron .",
        "build:dev": "tsc && cp -rf public dist/",
        "build": "npm run build:dev && electron-builder --win"
    },
    "author": {
        "name": "CodePellet",
        "email": "50582944+CodePellet@users.noreply.github.com",
        "url": "https://github.com/CodePellet"
    },
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "git@github.com:CodePellet/adb-device-helper.git"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.4",
        "@iarna/toml": "^2.2.5",
        "@popperjs/core": "^2.10.1",
        "adbdevicetracker": "github:Codepellet/adbDeviceTracker",
        "bootstrap": "^5.1.0",
        "electron-db": "^0.15.7",
        "electron-log": "^4.4.1"
    },
    "devDependencies": {
        "@types/node": "^18.6.2",
        "electron": "^19.0.10",
        "electron-builder": "^5.5.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.4.1"
    },
    "build": {
        "appId": "com.adbDeviceHelper.app",
        "productName": "ADB Device Helper",
        "copyright": "Copyright Â© 2022 @ CodePellet",
        "directories": {
            "output": "dist/compiled"
        },
        "extraResources": [
            {
                "from": "resources/adb-micro",
                "to": "adb-micro"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icons/win/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        }
    }
}
